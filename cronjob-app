apiVersion: batch/v1beta1
kind: CronJob
metadata:
  name: cronjober
spec:
  schedule: "0 6 * * *"
  # schedule: "*/1 * * * *"
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: cronjober
            image: registry.k8s.io/busybox                  
          restartPolicy: Never
